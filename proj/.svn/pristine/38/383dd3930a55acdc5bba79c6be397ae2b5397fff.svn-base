Highscore* create_hs() 
{
    Highscore* hs = (Highscore*) malloc(sizeof(Highscore));
    if(hs == NULL) return NULL;

    hs->date = init_date();   //initialize date 
    hs->isAchieved = false;  //starts unachieved
    hs->score = -1;          //symbolizes non achieved score

    return hs;
}


